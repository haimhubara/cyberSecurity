{
  "compilerOptions": {
    "module": "ESNext",         
    "target": "ES2022",         
    "moduleResolution": "node", 
    "esModuleInterop": true,   
    "types": ["node"],
    "rootDir": "./src",
    "outDir": "./dist",
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
